---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import XIcon from '~icons/simple-icons/x';
import GithubIcon from '~icons/simple-icons/github';
import LinkedInIcon from '~icons/simple-icons/linkedin';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://twitter.com/nicolas_goldack" target="_blank">
				<span class="sr-only">Follow nicolas on twitter</span>
				<XIcon />
			</a>
			<a href="https://github.com/ngoldack" target="_blank">
				<span class="sr-only">Nicolas' github page</span>
				<GithubIcon />
			</a>
			<a href="https://www.linkedin.com/in/nicolas-goldack/" target="_blank">
				<span class="sr-only">Nicolas' linkedin page</span>
				<LinkedInIcon />
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
